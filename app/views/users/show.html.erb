<main>
  <!-- コンテナ開始 -->
  <div class="container">
    <!-- 行の開始 -->
    <div class="row">
      <!-- 3列分の領域を確保 -->
      <div class="col-md-3">
        <!-- パーシャル 'books/list' を表示。@userと@bookをローカル変数として渡す -->
        <%= render partial: 'books/list', locals: { user: @user, book: @book } %>
      </div>
      <!-- 8列分の領域を確保し、1列分をオフセット（空ける） -->
      <div class="col-md-8 offset-md-1">
        <!-- 見出し表示 -->
        <h1>Books</h1>
        <!-- テーブルの開始 -->
        <table class="table">
          <!-- テーブルヘッダー -->
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <!-- テーブルボディ -->
          <tbody>
            <!-- @booksの各要素について繰り返し処理 -->
            <% @books.each do |book| %>
              <tr>
                <!-- 画像とリンク -->
                <td>
                  <%= link_to user_path(book.user) do %>
                    <%= image_tag book.user.get_profile_image(100,100) %>
                  <% end %>
                </td>
                <!-- 書籍のタイトルをリンクとして表示 -->
                <td><%= link_to book.title, book_path(book) %></td>
                <!-- 書籍の内容 -->
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
