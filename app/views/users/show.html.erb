<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100, 100) %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= @user.introduction %></td>
        <p><%= link_to "編集(仮)", edit_user_path(@user) %></p>
      </tr>
    </tbody>
  </table>
  </div>
  
<%= render 'books/list', book: @book %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag @user.get_profile_image(100, 100) %></td>
        <td><%= link_to book.title, books_path(@book) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

