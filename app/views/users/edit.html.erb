<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <!--autofocus: trueとは、ページを読み込むとカーソルが移動して入力状態になる。ファイルに１つまで。-->
  <%= f.text_field :name, autofocus: true, id: "inputName" %>
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "画像", accept: "image/*" %>
  <!--ユーザーモデルにIntroductionのカラムをつける-->
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_field :introduction %>
  <%= f.submit "Update User" %>
<% end %>
