<!--autofocus: trueとは、ページを読み込むとカーソルが移動して入力状態になる。ファイルに１つまで。-->



<main>
  <div class="container">
    <!-- ユーザーのエラーメッセージを表示するセクション -->
    <% if @user.errors.any? %>
      <!-- エラーの数を表示 -->
      <%= @user.errors.count %> errors prohibited this obj from being saved:
      <ul>
        <!-- エラーメッセージをリスト形式で表示 -->
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <!-- レスポンシブな行と列の設定 -->
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <!-- フォームの見出し -->
        <h2>User info</h2>
        <!-- ユーザー情報のフォーム -->
        <%= form_with model: @user do |f| %>
          <!-- 名前の入力フィールド -->
          <div class="form-lists">
            <label for="inputName">Name</label>
            <%= f.text_field :name, autofocus: true, id: "inputName" %>
          </div>
          <!-- 画像のアップロードフィールド -->
          <div class="form-lists">
            <label for="inputImage">Image</label>
            <%= f.file_field :profile_image, placeholder: "画像", accept: "image/*" %>
          </div>
          <!-- 紹介文の入力フィールド -->
          <div class="form-lists">
            <label for="inputIntroduction">Introduction</label>
            <%= f.text_field :introduction %>
          </div>
          <!-- 更新ボタン -->
          <div class="form-lists">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
