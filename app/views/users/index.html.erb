<main>
  <!-- コンテナーを作成し、内容を中央に配置 -->
  <div class="container">
    <div class="row">
      <!-- 左側のカラム: 本のリストを部分テンプレートとして表示 -->
      <div class="col-md-3">
        <%= render partial: 'books/list', locals: { user: @user, book: @book } %>
      </div>
      <!-- 右側のカラム: ユーザーのリストを表示 -->
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <!-- ユーザーのリストを繰り返し表示 -->
            <% @users.each do |user| %>
            <tr>
              <!-- ユーザーのプロフィール画像 -->
              <td><%= image_tag user.get_profile_image(100,100) %></td>
              <!-- ユーザー名のリンク -->
              <td><%= link_to user.name, user_path(user) %></td>
              <!-- "Show" リンク -->
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>




