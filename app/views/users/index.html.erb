<main>
  <div class="container px-5 px-sm-0">
<!--User info,New book-->
<%= render partial: 'books/list', locals: { user: @user, book: @book } %>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
        <td><%= link_to @book.user.name, user_path(@user) %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Show", users_show_path(@user) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</main>


