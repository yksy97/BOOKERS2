<!--User info-->
<%= render 'users/info', user: @user %>

<!--New book-->
<%= render 'list', book: @book %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th> </th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <!--これはダメ-->
        <!--<td><= link_to "<= book.title %>", book_path(book) %></td>-->
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>