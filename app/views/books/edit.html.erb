<main>
<% if @book.errors.any? %>
<div>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
     <% end %>
  </ul>
</div>
<% end %>
        
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <form>
        <h1>Editing Book</h1>
        <%= form_with model: book do |f| %>
        <div class="form-lists">
          <p>Title</p>
          <input><%= f.text_field :title %></input>
        </div>
        <div class="form-lists">
          <p>Opinion</p>
          <input><%= f.text_area :body %></input>
        </div>
        <div class="form-lists">
          <input><%= f.submit 'Update Book', class: "btn btn-success" %></input>
          <% end %>
        </div>
        </form>
        <%= link_to "Show", book_path(@book) %> |
        <%= link_to "Back", books_path(@book) %>
        books/id/showとbooks/backのリンク　show|Back
      </div>
    </div>
  </div>
</main>