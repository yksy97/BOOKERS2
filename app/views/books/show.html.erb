<!--New book-->
<%= render 'list', book: @book %>

<h1>Book detail</h1>
<table>
  <tbody>
      <tr>
          <% if @book.user == current_user %>
          <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
          <td><%= link_to @book.user.name, user_path(@user) %></td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <td>
            <%= link_to "Edit", edit_book_path(@book) %>
            <%= link_to "Destroy", book_path(@book), method: :delete, "confirm" => "本当に消しますか？"  %>
          <% end %>
      </tr>
  </tbody>
</table>

