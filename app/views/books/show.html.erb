
<h1>New book</h1>

<div>
   <% if @book.errors.any? %>
    <%= @book.errors.count %> prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book do |f| %>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
  
<% end %>

<h1>Book detail</h1>
<table>
  <tbody>
    <!--本の詳細画面＝単一情報＝ each.do構文は使わない-->
    <!--< @books.each do |book| %>-->
      <tr>
        <!--ダメ-->
        <!--<td><= link_to "<= book.title %>", book_path(book) %></td>-->

        <td><%= link_to @book.title, book_path(@book) %></td>
        <td><%= @book.body %></td>
        <td>
          <% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book) %>
            <%= link_to "Destroy", book_path(@book), method: :delete, "confirm" => "本当に消しますか？"  %>
          <% end %>
        </td>
      </tr>
  </tbody>
</table>

